{
  "name": "coinbase/coinbase-commerce",
  "description": "Coinbase Commerce API library",
  "keywords": [
    "bitcoin",
    "coinbase-commerce",
    "coinbase",
    "ethereum",
    "litecoin"
  ],
  "homepage": "https://commerce.coinbase.com/",
  "type": "library",
  "license": "Apache-2.0",
  "autoload": {
    "psr-4": {
      "CoinbaseCommerce\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CoinbaseCommerce\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^7.0",
    "guzzlehttp/psr7": "^2.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^3.8"
  },
  "scripts": {
    "lint": "./vendor/bin/php-cs-fixer fix --verbose",
    "fix": "./vendor/bin/php-cs-fixer fix",
    "test": "./vendor/bin/phpunit tests --verbose",
    "coverage": "./vendor/bin/phpunit tests --coverage-text"
  },
  "archive": {
    "exclude": [
      "/tests",
      "/examples",
      "/.circleci"
    ]
  }
}
